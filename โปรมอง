    Enabled = false,
    TeamCheck = false,
    BoxesEnabled = true,
    NamesEnabled = true,
    DistanceEnabled = true,
    TracersEnabled = true,
    BoxColor = Color3.fromRGB(0, 255, 0),
    TextColor = Color3.fromRGB(255, 255, 255),
    TracerColor = Color3.fromRGB(0, 255, 0),
    BoxThickness = 2,
    TextSize = 14,
    MaxDistance = 1000,
    HighlightTarget = true
}

-- Create GUI

-- Fade out notification
spawn(function()
    wait(3)
    for i = 1, 10 do
        Notification.BackgroundTransparency = 0.2 + (i * 0.08)
        NotificationText.TextTransparency = i * 0.1
        wait(0.1)
    end
    Notification:Destroy()
end)

-- Script protection
getgenv().ESP_LOADED = true
